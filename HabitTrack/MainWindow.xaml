<Window x:Class="HabitTrack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HabitTrack"
        mc:Ignorable="d"
        Title="HabitTrack" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" Background="White"
        ResizeMode="NoResize" Closing="Window_Closing">
    <Grid x:Name="MainGrid" Background="White">
        <StackPanel Margin="20">
            <TextBlock x:Name="TitleText" Text="HabitTrack" 
                       FontSize="24" Foreground="Black" Margin="0,0,0,10"/>

            <ListBox x:Name="TaskList" Margin="0,0,0,10" Height="250"/>

            <TextBox x:Name="TaskInput" Height="28" Margin="0,0,0,10" />

            <Button x:Name="AddTaskButton" Content="添加任务" Width="100" Margin="0,0,0,10"/>

            <TextBlock Text="Copyright © HabitTrack 2025" 
                       FontSize="12" Foreground="Gray" Margin="0,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
